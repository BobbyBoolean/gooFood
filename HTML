<body>
    <div class="container">
        <div class="header">
            <h1>üçΩÔ∏è Restaurant Finder</h1>
            <p>Discover the best rated restaurants near you</p>
        </div>

        <div class="search-section">
            <button id="findRestaurants" class="find-btn">
                üìç Find Restaurants Near Me
            </button>
            
            <div id="loading" class="loading">
                <div class="spinner"></div>
                <p>Finding amazing restaurants near you...</p>
            </div>

            <dcurl http://localhost:5000/testiv id="error" class="error" style="display: none;"></div>
        </div>

        <div id="results" class="results">
            <h2 style="color: white; margin-bottom: 20px; text-align: center;">Top Restaurants Near You</h2>
            <div id="restaurantsGrid" class="restaurants-grid"></div>
        </div>
    </div>

    <script>
        class RestaurantFinder {
            constructor() {
                this.findBtn = document.getElementById('findRestaurants');
                this.loading = document.getElementById('loading');
                this.error = document.getElementById('error');
                this.results = document.getElementById('results');
                this.restaurantsGrid = document.getElementById('restaurantsGrid');
                
                this.init();
            }

            init() {
                this.findBtn.addEventListener('click', () => this.findRestaurants());
            }

            async findRestaurants() {
                try {
                    this.showLoading();
                    this.hideError();
                    this.hideResults();
                    
                    const position = await this.getCurrentPosition();
                    const restaurants = await this.fetchRestaurants(position.coords);
                    
                    this.hideLoading();
                    this.displayRestaurants(restaurants);
                } catch (error) {
                    this.hideLoading();
                    this.showError(error.message);
                }
            }

            getCurrentPosition() {
                return new Promise((resolve, reject) => {
                    if (!navigator.geolocation) {
                        reject(new Error('Geolocation is not supported by this browser'));
                        return;
                    }

                    navigator.geolocation.getCurrentPosition(
                        resolve,
                        (error) => {
                            switch(error.code) {
                                case error.PERMISSION_DENIED:
                                    reject(new Error('Location access denied. Please enable location permissions and try again.'));
                                    break;
                                case error.POSITION_UNAVAILABLE:
                                    reject(new Error('Location information is unavailable.'));
                                    break;
                                case error.TIMEOUT:
                                    reject(new Error('Location request timed out.'));
                                    break;
                                default:
                                    reject(new Error('An unknown error occurred while retrieving location.'));
                                    break;
                            }
                        },
                        {
                            enableHighAccuracy: true,
                            timeout: 10000,
                            maximumAge: 300000
                        }
                    );
                });
            }

            async fetchRestaurants(coords) {
                const response = await fetch('/api/restaurants', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        latitude: coords.latitude,
                        longitude: coords.longitude
                    })
                });

                if (!response.ok) {
                    const errorData = await response.json().catch(() => ({}));
                    throw new Error(errorData.error || `Server error: ${response.status}`);
                }

                const data = await response.json();
                return data.restaurants || [];
            }

            displayRestaurants(restaurants) {
                if (!restaurants || restaurants.length === 0) {
                    this.restaurantsGrid.innerHTML = '<div class="no-results">No restaurants found nearby. Try a different location!</div>';
                    this.showResults();
                    return;
                }

                this.restaurantsGrid.innerHTML = restaurants.map(restaurant => 
                    this.createRestaurantCard(restaurant)
                ).join('');
                
                this.showResults();
            }

            createRestaurantCard(restaurant) {
                const rating = restaurant.rating || 0;
                const stars = this.generateStars(rating);
                const status = this.getStatusInfo(restaurant.opening_hours);
                
                return `
                    <div class="restaurant-card">
                        <div class="restaurant-name">${this.escapeHtml(restaurant.name)}</div>
                        <div class="restaurant-rating">
                            <span class="stars">${stars}</span>
                            <span class="rating-text">${rating.toFixed(1)} (${restaurant.user_ratings_total || 0} reviews)</span>
                        </div>
                        <div class="restaurant-address">${this.escapeHtml(restaurant.vicinity || restaurant.formatted_address || 'Address not available')}</div>
                        <div class="restaurant-status ${status.class}">${status.text}</div>
                    </div>
                `;
            }

            generateStars(rating) {
                const fullStars = Math.floor(rating);
                const hasHalfStar = rating % 1 >= 0.5;
                const emptyStars = 5 - fullStars - (hasHalfStar ? 1 : 0);
                
                return '‚òÖ'.repeat(fullStars) + 
                       (hasHalfStar ? '¬Ω' : '') + 
                       '‚òÜ'.repeat(emptyStars);
            }

            getStatusInfo(openingHours) {
                if (!openingHours) {
                    return { class: 'unknown', text: 'Hours unknown' };
                }
                
                if (openingHours.open_now === true) {
                    return { class: 'open', text: 'Open now' };
                } else if (openingHours.open_now === false) {
                    return { class: 'closed', text: 'Closed' };
                }
                
                return { class: 'unknown', text: 'Hours unknown' };
            }

            escapeHtml(text) {
                const div = document.createElement('div');
                div.textContent = text;
                return div.innerHTML;
            }

            showLoading() {
                this.loading.style.display = 'block';
                this.findBtn.disabled = true;
            }

            hideLoading() {
                this.loading.style.display = 'none';
                this.findBtn.disabled = false;
            }

            showError(message) {
                this.error.textContent = message;
                this.error.style.display = 'block';
            }

            hideError() {
                this.error.style.display = 'none';
            }

            showResults() {
                this.results.style.display = 'block';
            }

            hideResults() {
                this.results.style.display = 'none';
            }
        }

        // Initialize the app when the page loads
        document.addEventListener('DOMContentLoaded', () => {
            new RestaurantFinder();
        });
    </script>
</body>
</html>
